AC_REVISION([$Id$])
dnl
AC_INIT
AC_CONFIG_SRCDIR([autogen.sh])
dnl AC_CONFIG_AUX_DIR()
dnl
dnl 
dnl 
ECELL_MAJOR_VERSION=3
ECELL_MINOR_VERSION=1
ECELL_MICRO_VERSION=96
VERSION=$ECELL_MAJOR_VERSION.$ECELL_MINOR_VERSION.$ECELL_MICRO_VERSION
PACKAGE=ecell
dnl
AC_CANONICAL_TARGET([])
AM_INIT_AUTOMAKE($PACKAGE, $VERSION, do-not-define)
AC_PROG_MAKE_SET
dnl
dnl
dnl AC_LIBLTDL_INSTALLABLE
AC_LIBLTDL_CONVENIENCE
AC_SUBST(INCLTDL)
AC_SUBST(LIBLTDL)
AC_LIBTOOL_DLOPEN
AC_PROG_LIBTOOL
dnl
dnl
AC_CONFIG_SUBDIRS( libltdl ecell bin dmtool )
dnl
AC_ARG_ENABLE(gtk,
  AC_HELP_STRING([--disable-gtk],
               [build ecell without gtk.]),
  [ECELL_SUBDIR="libltdl ecell bin dmtool "],
  [ECELL_SUBDIR="libltdl ecell bin dmtool osogo "
  AC_CONFIG_SUBDIRS(osogo)]
)
dnl
AC_SUBST(ECELL_SUBDIR)
dnl
dnl
dnl
dnl
dnl
dnl
AC_ARG_WITH( boost-include,
  AC_HELP_STRING([--with-boost-include-dir=],
               [specify a non-standard include directory for boost library.]) )
AC_ARG_WITH( boost-lib-dir,
  AC_HELP_STRING([--with-boost-lib-dir=],
               [specify a non-standard library directory for boost library.]) )
dnl
dnl
AM_CONFIG_HEADER([ecell3_config.h])
dnl
dnl
dnl Create the top-level Makefile.
dnl
AC_CONFIG_FILES([Makefile])

AC_OUTPUT(ecell3.doxy)


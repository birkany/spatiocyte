dnl Process this file with autoconf to produce a configure script.
AC_INIT(ecell3-em2eml)
AC_CANONICAL_SYSTEM
AM_INIT_AUTOMAKE(bin, 0.0)
AM_CONFIG_HEADER([config.h])

dnl Checks for programs.
dnl AC_PROG_CC

dnl Checks for libraries.
AC_PROG_CXX

case ${host_os} in
  *cygwin* | *mingw* | *win32*)
    PYTHON_LIBS="-lpython22 -lboost_python"
    ;;
  *)
    PYTHON_LIBS=
    ;;
esac
AC_SUBST(PYTHON_LIBS) 


dnl Checks for typedefs, structures, and compiler characteristics.

dnl Checks for library functions.

AC_OUTPUT(Makefile ecell3-dmc
,chmod +x rd2dm eri2eml ecell3-dmc ecell3-em2eml ecell3-eml2em)


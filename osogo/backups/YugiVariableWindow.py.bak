class Window:

    def __init__( self, gladefile=None, root=None ):
        self.widgets = libglade.GladeXML( filename=gladefile, root=root )

    def addHandlers( self, handlers ):
        self.widgets.signal_autoconnect( handlers )
        
    def addHandler( self, name, handler, *args ):
        self.widgets.signal_connect( name, handler, args )

    def getWidget( self, key ):
        return self.widgets.get_widget( key )

    def __getitem__( self, key ):
        return self.widgets.get_widget( key )


class SubstanceWindow(Window):

    def __init__( self, gladefile ):

        self.theHandlerMap = { 'fixbutton_toggled' : self.fixbutton_toggled,
                               'quantity_changed': self.quantity_changed,
                               'conc_changed': self.conc_changed
                               }
        
        Window.__init__( self, gladefile )
        
        init_quantity = s.getProperty(calledSubstance, 'Quantity')
        init_conc = init_quantity[0] / N_A / volume
        id = s.getProperty(calledSubstance, 'Id')

        self['name_label'].set_text(str(id[0]))
        self['quantity_spin'].set_value( init_quantity[0] )
        self['conc_spin'].set_value( init_conc )

        self.addHandlers( self.theHandlerMap )
        self.fixed = 0

    def fixbutton_toggled( self,obj, ):
        if self.fixed :
            self.fixed = 0
            print 'unfixed : ' + str(self.fixed)

        else :
            self.fixed = 1
            print 'fixed : ' + str(self.fixed)
            
    def quantity_changed( self,obj ):
        aNumberString = obj.get_text()
        quantity = string.atof( aNumberString )
        conc = quantity / N_A / volume

        s.setProperty( calledSubstance, 'Quantity', (quantity,) )
        printProperty( s, calledSubstance, 'Quantity' )

        self['quantity_spin'].set_value( quantity )
        self['conc_spin'].set_value( conc )

    def conc_changed( self,obj ):
        aNumberString = obj.get_text()
        conc = string.atof( aNumberString )
        quantity = conc * N_A * volume

        s.setProperty( calledSubstance, 'Quantity', (quantity,) )
        printProperty( s, calledSubstance, 'Quantity' )

        self['quantity_spin'].set_value( quantity )
        self['conc_spin'].set_value( conc )

    def setLabel(self,name,text):
        obj = self.getWidget(name)
        obj.set_label(text)

def mainQuit( obj, data ):
    print obj,data
    gtk.mainquit()

def mainLoop():
    # FIXME: should be a custom function
    gtk.mainloop()

def main():
    aWindow = SubstanceWindow( 'yugi_substance_window.glade' )
    aWindow.addHandler( 'gtk_main_quit', mainQuit )
    mainLoop()

if __name__ == "__main__":
    main()



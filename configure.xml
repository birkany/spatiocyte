<project name="ecell3" default="configure" basedir=".">
	<property file="configure.properties" prefix="configure" />

	<target name="autogen">
		<echo message="Running autogen.sh ..." />
		<exec dir="${configure.src}" executable="${basedir}/autogen.sh" failonerror="true">
			<env key="AUTOGEN_SUBDIR_MODE" value="1" />
		</exec>
	</target>

	<target name="configure" depends="autogen">
		<echo message="Running configure ..." />
		<exec dir="${configure.build}" executable="${basedir}/${configure.configure}" failonerror="true">
			<arg line="--prefix=${basedir}/${configure.prefix} ${configure.flags}" />
		</exec>
	</target>

</project>

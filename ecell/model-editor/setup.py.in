#!/usr/bin/env python

import os
import sys
from glob import glob
from distutils.core import setup, Extension

resources = glob(
    os.path.join( os.path.dirname( __file__ ), 'glade', '*' ) )

plugins = glob(
    os.path.join( os.path.dirname( __file__ ), 'plugins', '*' ) )

setup(
    name = 'ecell.model-editor',
    version = @ECELL_VERSION_STRING@,
    description = 'E-Cell Model Editor',
    author = 'E-Cell project',
    author_email = 'info@e-cell.org',
    url = 'http://www.e-cell.org/',
    packages = [ 'ecell.ui.model_editor' ],
    scripts = [ 'ecell3-model-editor' ],
    data_files = [
        ( os.path.join( os.environ['sysconfdir'], '@ECELL_DIRNAME@' ),
          [ 'model-editor.ini' ] ),
        ( os.path.join( os.environ['datarootdir'], '@ECELL_DIRNAME@',
            'model-editor', 'glade' ), resources ),
        ( os.path.join( os.environ['libdir'], '@ECELL_DIRNAME@',
            'model-editor', 'plugins' ), plugins ),
        ]
    )
